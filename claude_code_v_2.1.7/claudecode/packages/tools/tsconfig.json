{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@claudecode/shared": ["../shared/src"],
      "@claudecode/core": ["../core/src"],
      "@claudecode/features": ["../features/src"],
      "@claudecode/integrations": ["../integrations/src"],
      "@claudecode/platform": ["../platform/src"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
