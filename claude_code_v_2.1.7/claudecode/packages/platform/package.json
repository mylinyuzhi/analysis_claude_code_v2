{
  "name": "@claudecode/platform",
  "version": "2.1.7",
  "description": "Platform infrastructure for Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./sandbox": {
      "import": "./dist/sandbox/index.js",
      "types": "./dist/sandbox/index.d.ts"
    },
    "./telemetry": {
      "import": "./dist/telemetry/index.js",
      "types": "./dist/telemetry/index.d.ts"
    },
    "./fs": {
      "import": "./dist/fs/index.js",
      "types": "./dist/fs/index.d.ts"
    },
    "./shell-parser": {
      "import": "./dist/shell-parser/index.js",
      "types": "./dist/shell-parser/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/auth/index.ts src/sandbox/index.ts src/telemetry/index.ts src/fs/index.ts src/shell-parser/index.ts --format esm --dts",
    "dev": "tsup src/index.ts src/auth/index.ts src/sandbox/index.ts src/telemetry/index.ts src/fs/index.ts src/shell-parser/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecode/shared": "workspace:*",
    "@anthropic-ai/sdk": "^0.32.1",
    "@aws-sdk/client-bedrock-runtime": "^3.758.0",
    "@aws-sdk/credential-providers": "^3.758.0",
    "@azure/identity": "^4.2.1",
    "fuse.js": "^7.0.0",
    "google-auth-library": "^9.15.0",
    "https-proxy-agent": "^7.0.2",
    "ignore": "^5.3.0",
    "undici": "^6.0.0",
    "web-tree-sitter": "^0.22.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
