{
  "name": "@claudecode/plugin",
  "version": "2.1.7",
  "description": "Plugin system for Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./loader": {
      "import": "./dist/loader.js",
      "types": "./dist/loader.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas.js",
      "types": "./dist/schemas.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/loader.ts src/schemas.ts --format esm --dts",
    "dev": "tsup src/index.ts src/loader.ts src/schemas.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecode/shared": "workspace:*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
