{
  "name": "@claudecode/cli",
  "version": "2.1.7",
  "description": "CLI entry point for Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "claude": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecode/shared": "workspace:*",
    "@claudecode/core": "workspace:*",
    "@claudecode/tools": "workspace:*",
    "@claudecode/features": "workspace:*",
    "@claudecode/integrations": "workspace:*",
    "@claudecode/platform": "workspace:*",
    "@claudecode/ui": "workspace:*",
    "@claudecode/plugin": "workspace:*",
    "@claudecode/sdk": "workspace:*",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
