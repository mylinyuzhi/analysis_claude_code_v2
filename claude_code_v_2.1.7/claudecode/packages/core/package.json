{
  "name": "@claudecode/core",
  "version": "2.1.7",
  "description": "Core execution engine for Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./agent-loop": {
      "import": "./dist/agent-loop/index.js",
      "types": "./dist/agent-loop/index.d.ts"
    },
    "./tools": {
      "import": "./dist/tools/index.js",
      "types": "./dist/tools/index.d.ts"
    },
    "./llm-api": {
      "import": "./dist/llm-api/index.js",
      "types": "./dist/llm-api/index.d.ts"
    },
    "./state": {
      "import": "./dist/state/index.js",
      "types": "./dist/state/index.d.ts"
    },
    "./message": {
      "import": "./dist/message/index.js",
      "types": "./dist/message/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/agent-loop/index.ts src/tools/index.ts src/llm-api/index.ts src/state/index.ts src/message/index.ts --format esm --dts --external react-devtools-core",
    "dev": "tsup src/index.ts src/agent-loop/index.ts src/tools/index.ts src/llm-api/index.ts src/state/index.ts src/message/index.ts --format esm --dts --watch --external react-devtools-core",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecode/shared": "workspace:*",
    "@claudecode/platform": "workspace:*",
    "@anthropic-ai/sdk": "^0.32.1",
    "@aws-sdk/client-bedrock-runtime": "^3.758.0",
    "@aws-sdk/credential-providers": "^3.758.0",
    "@azure/identity": "^4.2.1",
    "google-auth-library": "^9.15.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
